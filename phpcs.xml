<?xml version="1.0"?>
<ruleset name="Hybrid WordPress + Modern PHP Standards">
    <description>
        A modern ruleset for WordPress developers using OOP, Composer packages, and WooCommerce â€” with annoying legacy rules disabled.
    </description>

    <!-- Include WPCS core structure -->
    <rule ref="WordPress-Core" />
    <rule ref="WordPress-Docs" />
    <rule ref="WordPress-Extra" />

    <!-- Disable legacy/pedantic rules -->

    <!-- ðŸ« Allow camelCase for object properties -->
    <rule ref="WordPress.NamingConventions.ValidVariableName.NotSnakeCaseMemberVar">
        <severity>0</severity>
    </rule>

    <!-- ðŸ˜¬ Kill Yoda conditions -->
    <rule ref="WordPress.PHP.YodaConditions">
        <severity>0</severity>
    </rule>

    <!-- ðŸ’¬ Allow inline comments without punctuation -->
    <rule ref="Squiz.Commenting.InlineComment.InvalidEndChar">
        <severity>0</severity>
    </rule>

    <!-- ðŸ’¬ Allow inline comments without capital first letters -->
    <rule ref="Squiz.Commenting.InlineComment.NotCapital">
        <severity>0</severity>
    </rule>

    <!-- ðŸ—¨ï¸ Disable param doc comment full stop rule -->
    <rule ref="Squiz.Commenting.FunctionComment.ParamCommentFullStop">
        <severity>0</severity>
    </rule>

    <!-- ðŸ“¦ No required @package tags -->
    <rule ref="Squiz.Commenting.FileComment.MissingPackageTag">
        <severity>0</severity>
    </rule>

    <!-- âœ… Keep useful rules -->
    <rule ref="Generic.PHP.LowerCaseKeyword" />

</ruleset>